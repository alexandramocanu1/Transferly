<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Stiluri globale ale aplicaÈ›iei -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Stil personalizat pentru BottomNavigationView -->
    <style name="BottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/gray</item>
    </style>

    <!-- Stil transparent pentru FullImageActivity -->
    <style name="Theme.Transparent" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ModernDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:background">?android:attr/windowBackground</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>


</resources>
